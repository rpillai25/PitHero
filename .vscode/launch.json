{
    // Change "mono" to "clr" for 64-bit .NET Framework debugging on Windows.
    // (See: https://github.com/OmniSharp/omnisharp-vscode/wiki/Desktop-.NET-Framework)

    "version": "0.2.0",
    "configurations": [

        {
            "name": "Launch (Mac)",
            "type": "mono",
            "request": "launch",
            "program": "${workspaceFolder}/PitHero/bin/Debug/PitHero.exe",
            "cwd": "${workspaceFolder}/PitHero",
            "preLaunchTask": "Build (Debug)",
            "osx":{
                "env": {
                    "DYLD_LIBRARY_PATH": "${workspaceFolder}/PitHero/bin/Debug/osx/"
                }
            }
        },
		
        {
            "name": "Launch Without Building (Mac)",
            "type": "mono",
            "request": "launch",
            "program": "${workspaceFolder}/PitHero/bin/Debug/PitHero.exe",
            "cwd": "${workspaceFolder}",
            "osx":{
                "env": {
                    "DYLD_LIBRARY_PATH": "${workspaceFolder}/PitHero/bin/Debug/osx/"
                }
            }
        },

        {
            "name": "Launch (Windows)",
            "type": "clr",
            "request": "launch",
            "program": "${workspaceFolder}/PitHero/bin/Debug/PitHero.exe",
            "cwd": "${workspaceFolder}/PitHero",
            "preLaunchTask": "Build (Debug)"
        },
		
        {
            "name": "Launch Without Building (Windows)",
            "type": "clr",
            "request": "launch",
            "program": "${workspaceFolder}/PitHero/bin/Debug/PitHero.exe",
            "cwd": "${workspaceFolder}"
        },

        {
            "name": "Attach",
            "type": "mono",
            "request": "attach",
            "address": "localhost",
            "port": 55555
        }
    ]
}
